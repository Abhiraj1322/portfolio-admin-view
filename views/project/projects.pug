doctype html
html
  head
    title Projects List
    link(rel="stylesheet", href="/styles.css")
  body
    h1 Projects

    if projects.length > 0
      table(border="1")
        thead
          tr
            th Name
            th Description
            th Tech Stack
            th Actions
        tbody
          each project in projects
            tr
              td= project.name
              td= project.description
              td= project.tech
              td
                form(action=`/projects/${project._id}/delete` method="POST" onsubmit="return confirm('Are you sure you want to delete this project?');")
                  button(type="submit") Delete
    else
      p No projects found.
